  <%= form_for @task do |f| %>
    <h2>
      <%= f.label :title %>
      <%= f.text_field :title , class: "form-control"%>
    </h2>
    <h2>
      <%= f.label :details %>
      <%= f.text_field :details , class: "form-control"%>
    </h2>
    <h2>
      <%= f.label :completed %>
      <%= f.check_box :completed%>
    </h2>
    <div class = "btn btn-primary">
      <%= f.submit %>
    </div>
  <% end %>
    <h2>
    <%= link_to "Back to list", tasks_path %>
    </h2>

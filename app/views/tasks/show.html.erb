<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<h1> <%= @task.title %> </h1>
<%= link_to "Back to list", tasks_path %>
<div id= "details">
  <h3> <%= @task.details %> </h3>
</div>
<div>
  <% if @task.completed %>
      <input id="checkBox" type="checkbox" checked> This task is completed
  <% else %>
    <input id="checkBox" type="checkbox" unchecked> This task is not completed yet
  <% end %>
</div>
<%= link_to "Edit this task", edit_path %>
